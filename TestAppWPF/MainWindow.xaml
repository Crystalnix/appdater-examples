<Window x:Class="TestAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestAppWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="180.83" Width="212.227">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LblVersion" Grid.Row="0" Content="Current Version:" VerticalAlignment="Bottom"/>
        <Button x:Name="CheckBtn" Grid.Row="1" Content="Check and Install" Click="ChkBtn_Click"/>
        <StackPanel Grid.Row="2">
            <Label Name="LblStatus" Content="{Binding StatusString}" Height="25"/>
            <ProgressBar Name="ProgressDownload" Value="{Binding DownloadPercent}" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
